@page
@model FribergRentals.Pages.Admin.ManageContent.Cars.EditModel

@{
    ViewData["Title"] = "Edit";
}

<div class="card-center">
    <h1>Edit</h1>
    <form method="post">
        <div class="card-text">
            <div class="validation-error" asp-validation-summary="ModelOnly"></div>
            <input type="hidden" asp-for="Car.Id" />
            <div class="form-pair">
                <label class="input-label" asp-for="Car.Brand"></label>
                <input class="input-textbox" asp-for="Car.Brand" />
                <span asp-validation-for="Car.Brand"></span><br />
            </div>

            <div class="form-pair">
                <label class="input-label" asp-for="Car.Model"></label>
                <input class="input-textbox" asp-for="Car.Model" />
                <span class="validation-error" asp-validation-for="Car.Model"></span><br />
            </div>

            <div class="form-pair">
                <label class="input-label" asp-for="Car.Description"></label>
                <input class="input-textbox" asp-for="Car.Description" />
                <span class="validation-error" asp-validation-for="Car.Description"></span><br />
            </div>

            <div class="form-pair">
                <label class="input-label" asp-for="Car.Price"></label>
                <input class="input-textbox" asp-for="Car.Price" />

            </div>
            <span class="validation-error" asp-validation-for="Car.Price"></span><br />

            <div class="form-pair">
                <label class="input-label" asp-for="Car.ImageUrl"></label>
                <input class="input-textbox" asp-for="Car.ImageUrl" />
                <span class="validation-error" asp-validation-for="Car.ImageUrl"></span>
            </div>
        </div>
        <div class="button-row">
            <input class="button positive" type="submit" value="Save" />
            <a asp-page="./Index"><button type="button" class="button">Back</button></a>
        </div>
    </form>





    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
