@page
@model FribergRentals.Pages.Admin.ManageContent.Orders.DeleteModel

@{
    ViewData["Title"] = "Delete";
    if (string.IsNullOrEmpty(HttpContext.Request.Cookies["SessionToken"]))
    {
        HttpContext.Response.Redirect("/Login/SessionExpired");
    }
}

<div class="card-center">
    <h1>Delete</h1>
    <h3>Are you sure you want to delete this order?</h3>
    <div class="card-text">
        <span class="input-label">
            @Html.DisplayNameFor(model => model.Order.Id):
        </span>
        @Html.DisplayFor(model => model.Order.Id)<br />
        <span class="input-label">
            Time of Order:
        </span>
        @Html.DisplayFor(model => model.Order.TimeOfOrder)<br />

        <span class="input-label">
            @Html.DisplayNameFor(model => model.Order.PickUpDate):
        </span>
        @Html.DisplayFor(model => model.Order.PickUpDate)<br />

        <span class="input-label">
            @Html.DisplayNameFor(model => model.Order.ReturnDate):
        </span>
        @Html.DisplayFor(model => model.Order.ReturnDate)<br />

        <span class="input-label">
            Total Price:
        </span>
        @Html.DisplayFor(model => model.Order.TotalPrice)<br />

    </div>

    <form method="post">
        <input type="hidden" asp-for="Order.Id" />
        <div class="button-row">
            <input class="button danger" type="submit" value="Delete" />
            <a asp-page="./Index"><button type="button" class="button">Back</button></a>
        </div>

    </form>
</div>
